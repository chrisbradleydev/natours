doctype html
html
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(nonce=`${nonce}` rel='stylesheet' href='/css/style.css')
      link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
      title #{title} | Natours
  body(data-alert=`${alert ? alert : ''}`)
    // HEADER
    include _header
    // CONTENT
    block content
      h1 This is a placeholder heading
    // FOOTER
    include _footer
    // SCRIPTS
    block scripts
      script(nonce=`${nonce}` type='text/javascript' src='/js/bundle.js')
